@model List<ecommerce_1.Data.Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @if (Model != null && Model.Count() > 0)
    {
        foreach (var item in Model)
        {

            <div class="col-md-3 shadow bg-white m-2">
                <img src="@item.PathImage" class="img-fluid">
                <h5>Name: @item.Name</h5>
                <h6>Price: @item.Price</h6>
            </div>
        }
    }
</div>
